{
    "telemetry.telemetryLevel": "off",
    "workbench.enableExperiments": false,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.colorTheme": "IBM Carbon Color Theme",
    "editor.fontSize": 12,
    "editor.fontFamily": "monospace",
    "editor.renderWhitespace": "all",
    "editor.suggestSelection": "first",
    "editor.formatOnSave": true,
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "editor.rulers": [
        80
    ],
    "debug.allowBreakpointsEverywhere": true,
    "debug.console.fontSize": 12,
    "markdown.preview.fontSize": 12,
    "terminal.integrated.fontSize": 12,
    "files.insertFinalNewline": true,
    "breadcrumbs.icons": false,
    "outline.icons": false,
    "scm.inputFontSize": 12,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "rust-client.rustupPath": "~/.cargo/bin/rustup",
    "doxdocgen.generic.authorTag": "@author {author} <{email}>",
    "doxdocgen.generic.useGitUserEmail": true,
    "doxdocgen.generic.useGitUserName": true,
    "doxdocgen.file.copyrightTag": [],
    "C_Cpp.formatting": "clangFormat",
    "C_Cpp.clang_format_sortIncludes": true,
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.intelliSenseMode": "linux-clang-x64",
    // "C_Cpp.clang_format_style": "Visual Studio",
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: LLVM, AlignAfterOpenBracket: Align, UseTab: Never, IndentWidth: 4, TabWidth: 4, BreakBeforeBraces: Allman, AllowShortIfStatementsOnASingleLine: true, IndentCaseLabels: false, ColumnLimit: 100, AccessModifierOffset: -4, NamespaceIndentation: All, FixNamespaceComments: true, AllowAllParametersOfDeclarationOnNextLine: false, AllowAllArgumentsOnNextLine: false, BinPackArguments: false, BinPackParameters: false,}",
    "[c],[cpp]": {
        "editor.wordBasedSuggestions": false,
        "editor.suggest.insertMode": "replace",
        "editor.semanticHighlighting.enabled": true,
    },
    "OpenCL.formatting.name": "clang-format",
    "python.formatting.provider": "yapf",
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "extensions.ignoreRecommendations": true,
    "files.associations": {
        "*.cl": "opencl",
        ".clang-format": "yaml"
    },
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "[java]": {
        "editor.defaultFormatter": "redhat.java"
    },
    "java.format.settings.profile": "GoogleStyle",
    "terminal.integrated.scrollback": 1000000,
    "explorer.confirmDragAndDrop": false,
    "todohighlight.isCaseSensitive": false,
    "gitlens.advanced.messages": {
        "suppressLineUncommittedWarning": true
    },
    "terminal.integrated.defaultProfile.linux": "zsh",
}
